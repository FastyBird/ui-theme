{
  "name": "@fastybird/web-ui-theme",
  "version": "1.0.0",
  "description": "FastyBird basic theme & Vue components for web apps",
  "keywords": [
    "fastybird",
    "fb",
    "ui",
    "components",
    "vue"
  ],
  "homepage": "https://www.fastybird.com",
  "bugs": "https://github.com/FastyBird/web-ui-theme/issues",
  "license": "Apache-2.0",
  "author": {
    "name": "FastyBird s.r.o.",
    "email": "info@fastybird.com",
    "url": "https://www.fastybird.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FastyBird/web-ui-theme.git"
  },
  "main": "dist/web-ui-theme.ssr.js",
  "browser": "dist/web-ui-theme.esm.js",
  "module": "dist/web-ui-theme.esm.js",
  "unpkg": "dist/web-ui-theme.min.js",
  "types": "types/web-ui-theme.d.ts",
  "files": [
    "dist/*",
    "types/*",
    "src/**/*.vue"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife"
  },
  "dependencies": {
    "body-scroll-lock": "^3.0",
    "lodash.get": "^4.4",
