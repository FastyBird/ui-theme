{
  "name": "@fastybird/web-ui-theme",
  "version": "0.1.0",
  "description": "FastyBird basic theme & Vue components for web apps",
  "keywords": [
    "fastybird",
    "fb",
    "ui",
    "components",
    "vue"
  ],
  "homepage": "https://www.fastybird.com",
  "bugs": "https://github.com/FastyBird/web-ui-theme/issues",
  "license": "Apache-2.0",
  "author": {
    "name": "FastyBird s.r.o.",
    "email": "info@fastybird.com",
    "url": "https://www.fastybird.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FastyBird/web-ui-theme.git"
  },
  "main": "dist/web-ui-theme.ssr.js",
  "browser": "dist/web-ui-theme.esm.js",
  "module": "dist/web-ui-theme.esm.js",
  "unpkg": "dist/web-ui-theme.min.js",
  "types": "web-ui-theme.d.ts",
  "files": [
    "dist/*",
    "src/**/*.vue",
    "src/assets/*"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js && yarn build:styles",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife",
    "build:styles": "sass src/assets/theme.scss dist/web-ui-theme.css --no-source-map",
    "lint:js": "eslint --ext .js,.ts,.vue --ignore-path .gitignore src/",
    "lint:ts": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:styles": "stylelint 'src/**/*.scss'",
    "storybook:serve": "start-storybook -p 6006",
    "storybook:build": "build-storybook"
  },
  "dependencies": {
    "body-scroll-lock": "^3.0",
    "lodash.get": "^4.4",
    "normalize.css": "^8.0",
    "portal-vue": "^2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9",
    "@babel/plugin-proposal-class-properties": "^7.10",
    "@babel/preset-env": "^7.9",
    "@babel/preset-typescript": "^7.9",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/vue-fontawesome": "^2.0.2",
    "@nuxt/types": "^2.15",
    "@rollup/plugin-alias": "^2.2",
    "@rollup/plugin-babel": "^5.3",
    "@rollup/plugin-commonjs": "^11.1",
    "@rollup/plugin-eslint": "^8.0",
    "@rollup/plugin-node-resolve": "^10.0",
    "@rollup/plugin-replace": "^2.3",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-knobs": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/vue": "^6.2.9",
    "@types/body-scroll-lock": "^2.6",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14",
    "@types/lodash.get": "^4.4",
    "@types/node": "^15.12",
    "@types/uuid": "^8.3",
    "@typescript-eslint/eslint-plugin": "^4.26",
    "@typescript-eslint/parser": "^4.26",
    "@vue/babel-preset-app": "^4.5.13",
    "@vue/composition-api": "^1.0.0-rc.7",
    "@vue/test-utils": "^1.2.0",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0",
    "eslint": "^7.28",
    "eslint-plugin-vue": "^7.10",
    "jest": "^27.0.4",
    "minimist": "^1.2",
    "rollup": "^2.7",
    "rollup-plugin-terser": "^5.3",
    "rollup-plugin-vue": "^5.1",
    "sass": "^1.34",
    "sass-loader": "^10.2",
    "stylelint": "^13.13",
    "stylelint-config-standard": "^22.0",
    "stylelint-scss": "^3.19",
    "tslib": "^2.2",
    "tslint": "^6.1",
    "typescript": "^4.3",
    "vue": "^2.6",
    "vue-eslint-parser": "^7.6",
    "vue-loader": "^15.9.7",
    "vue-template-compiler": "^2.6"
  },
  "peerDependencies": {
    "vue": "^2.6"
  },
  "engines": {
    "node": ">=10"
  }
}
